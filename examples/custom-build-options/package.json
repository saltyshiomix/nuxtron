    "friendly-errors-webpack-plugin": "^1.7.0",
    "fs-extra": "^7.0.1",
    "node-npx": "^1.3.1",
    "ora": "^3.0.0",
    "webpack": "^4.29.2",
    "webpack-merge": "^4.2.1"
  }
